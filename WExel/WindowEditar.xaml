<Window x:Class="WExel.WindowEditar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WExel"
        mc:Ignorable="d"
        Title="Editar" Height="150" Width="350" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="30"/>
            <RowDefinition/>
            <RowDefinition MaxHeight="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="X" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center"/>
        <TextBlock Text="Y" Grid.Column="1" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center"/>
        <TextBox Name="Box1" Grid.Row="1" Margin="20,15,20,15"/>
        <TextBox Name="Box2"  Grid.Column="1" Grid.Row="1" Margin="20,15,20,15"/>
        <Button x:Name="Aceptar" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="40,0,40,5" Content="Aceptar" Click="Aceptar_Click"/>
    </Grid>
</Window>
